<%= form_with model: @post do |form| %>
    <div class="form-post"> 
        <div class="input-group" >
            <%= form.label :title %>
            <%= form.text_field :title %>
        </div>
        <div class="input-group" >
            <%= form.label :body %>
            <%= form.text_area :body, size: "60x10" %>
        </div>
        <%= form.submit %>
    </div>
<% end %>
