  <%= form_with url: sessions_path do |form| %>
    <div class="signin-form">
      <div class="input-group">
        <%= form.label :email %>
        <%= form.email_field :email, required: :required %>
      </div>
      <div class="input-group">
        <%= form.label :password %>
        <%= form.password_field :password, required: :required %>
      </div>
      <div class="input-group">
        <%flash.each do |type, msg| %>
          <p class="<%= type %>"><%= msg %></p>
        <% end %>
      </div>
      <%= form.submit "Log In" %>
    </div>
  <% end %>